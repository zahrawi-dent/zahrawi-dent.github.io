---
import BaseLayout from "@/layouts/BaseLayout.astro";
import EmailOctopusForm from "@/components/EmailOctopusForm.tsx";

const DEFAULT_FORM_ACTION =
  import.meta.env.VITE_EMAIL_OCTOPUS_FORM_ACTION || "";
const DEFAULT_HONEYPOT_FIELD =
  import.meta.env.VITE_EMAIL_OCTOPUS_HONEYPOT_FIELD || "";
const DEFAULT_RECAPTCHA_SITE_KEY =
  import.meta.env.VITE_EMAIL_OCTOPUS_RECAPTCHA_SITE_KEY || "";
---

<BaseLayout
  title="Subscribe | Zahrawi Dental Blog"
  description="Subscribe to Zahrawi Dental Blog"
>
  <EmailOctopusForm
    client:load
    formActionUrl={DEFAULT_FORM_ACTION}
    honeypotFieldName={DEFAULT_HONEYPOT_FIELD}
    recaptchaSiteKey={DEFAULT_RECAPTCHA_SITE_KEY}
  />
</BaseLayout>
