---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

const footerLinks = [
  {
    title: "About",
    links: [
      { label: "Our Mission", url: "/about#mission" },
      { label: "Our Team", url: "/about#team" },
      { label: "History", url: "/about#history" },
    ],
  },
  {
    title: "Explore",
    links: [
      { label: "Blog", url: "/blog" },
      { label: "Research", url: "/research" },
      { label: "Resources", url: "/resources" },
    ],
  },
  {
    title: "Connect",
    links: [
      { label: "Latest Articles", url: "/blog" },
      { label: "Popular Topics", url: "/blog" },
      { label: "Video Library", url: "/blog" },
    ],
  },
];

const socialLinks = [
  { label: "Twitter", url: "https://twitter.com", icon: "twitter" },
  { label: "Instagram", url: "https://instagram.com", icon: "instagram" },
  { label: "LinkedIn", url: "https://linkedin.com", icon: "linkedin" },
  { label: "Youtube", url: "https://youtube.com", icon: "youtube" },
];

const allPosts: CollectionEntry<"blog">[] = await getCollection("blog");
const categories: string[] = [...new Set(allPosts.map((post) => post.data.category))];
---

<footer class="bg-gray-800" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8 xl:col-span-1">
        <div class="flex items-center">
          <i class="fas fa-tooth text-teal-400 text-2xl mr-2"></i>
          <h3 class="text-2xl font-bold text-teal-400">Zahrawi</h3>
        </div>
        <p class="text-gray-300 text-base">
          Bringing you the latest in dental health education, research, and
          professional insights. Your trusted source for evidence-based oral
          healthcare information since 2022.
        </p>
        <div class="flex space-x-6">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                class="text-indigo-100 hover:text-teal-400 transition-colors duration-300"
                aria-label={link.label}
              >
                {link.icon === "youtube" && (
                  <span class="sr-only">Youtube</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 576 512"
                  >
                    <path d="M549.7 124.1c-6.3-23.7-24.8-42.3-48.3-48.6C458.8 64 288 64 288 64S117.2 64 74.6 75.5c-23.5 6.3-42 24.9-48.3 48.6-11.4 42.9-11.4 132.3-11.4 132.3s0 89.4 11.4 132.3c6.3 23.7 24.8 41.5 48.3 47.8C117.2 448 288 448 288 448s170.8 0 213.4-11.5c23.5-6.3 42-24.2 48.3-47.8 11.4-42.9 11.4-132.3 11.4-132.3s0-89.4-11.4-132.3zm-317.5 213.5V175.2l142.7 81.2-142.7 81." />
                  </svg>
                )}
                {link.icon === "twitter" && (
                  <span class="sr-only">Twitter</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z" />
                  </svg>
                )}
                {link.icon === "instagram" && (
                  <span class="sr-only">Instagram</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                )}
                {link.icon === "linkedin" && (
                  <span class="sr-only">Linkedin</span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>

      <div class="mt-12 grid grid-cols-2 lg:grid-cols-3 gap-8 xl:mt-0 xl:col-span-2">

        <!-- TODO: make footer section it's own component  -->
    <div class="md:grid md:grid-cols-2 md:gap-8"> {/* Modified to one column on medium screens */}
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
          Categories
        </h3>
        <ul role="list" class="mt-4 space-y-4">
          {categories.map(category => (
            <li>
              <a
                href={`/${category}`}
                class="text-base text-indigo-100 hover:text-white transition-colors duration-300"
              >
                {category.charAt(0).toUpperCase() + category.slice(1)}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>


        {footerLinks.map(section => (
    <div class="md:grid md:grid-cols-2 md:gap-8"> {/* Modified to one column on medium screens */}
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
          {section.title}
        </h3>
        <ul role="list" class="mt-4 space-y-4">
          {section.links.map(link => (
            <li>
              <a
                href={link.url}
                class="text-base text-indigo-100 hover:text-white transition-colors duration-300"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  ))}



</div>

    </div>

    <!-- Newsletter Subscription -->
    <div class="mt-12 border-t border-gray-700 pt-8">
      <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase">
        Subscribe to our newsletter
      </h3>
      <p class="mt-2 text-base text-gray-300">
        Get the latest dental health tips and articles delivered to your inbox.
      </p>
      <form class="mt-4 sm:flex sm:max-w-md">
        <label for="email-address" class="sr-only">Email address</label>
        <input
          type="email"
          name="email-address"
          id="email-address"
          autocomplete="email"
          required
          class="appearance-none min-w-0 w-full bg-gray-700 border border-gray-600 rounded-md py-2 px-4 text-base text-gray-300 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-teal-500 focus:placeholder-gray-400"
          placeholder="Enter your email"
        />
        <div class="mt-3 rounded-md sm:mt-0 sm:ml-3 sm:flex-shrink-0">
          <button
            type="submit"
            class="w-full bg-teal-500 border border-transparent rounded-md py-2 px-4 flex items-center justify-center text-base font-medium text-white hover:bg-teal-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-teal-500"
          >
            Subscribe
          </button>
        </div>
      </form>
    </div>


    <!-- Bottom section with copyright and links -->
    <div
      class="mt-8 border-t border-gray-700 pt-8 md:flex md:items-center md:justify-between"
    >
      <div class="flex space-x-6 md:order-2">
        <a
          href="#"
          class="text-gray-400 hover:text-gray-300 transition-colors duration-300"
        >
          Privacy Policy
        </a>
        <a
          href="#"
          class="text-gray-400 hover:text-gray-300 transition-colors duration-300"
        >
          Terms of Use
        </a>
        <a
          href="#"
          class="text-gray-400 hover:text-gray-300 transition-colors duration-300"
        >
          Cookie Policy
        </a>
        <a
          href="#"
          class="text-gray-400 hover:text-gray-300 transition-colors duration-300"
        >
          Accessibility
        </a>
      </div>
      <p class="mt-8 text-base text-gray-400 md:mt-0 md:order-1">
      &copy; {new Date().getFullYear()} Zahrawi Dental Blog. All rights reserved.
      </p>
    </div>
  </div>
</footer>
