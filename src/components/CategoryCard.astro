---
interface Props {
  title: string;
  description: string;
  icon: string;
  color: string;
  href: string;
}

const { title, description, icon, color, href } = Astro.props;
---

<div
  class="group rounded-lg bg-gray-800 p-6 shadow-lg transition-transform duration-300 hover:scale-105"
>
  <div class={`text-6xl mb-4 ${color} flex items-center justify-center`}>
    <Fragment set:html={icon} />
  </div>
  <a href={href} transition:name={title}>
    <h2
      class="mb-3 text-2xl font-semibold transition-colors group-hover:text-blue-400"
    >
      {title}
    </h2>
  </a>
  <p class="mb-4 text-gray-400">{description}</p>
  <a
    href={href}
    class="mt-4 inline-block rounded-md bg-blue-600 px-4 py-2 text-white transition-colors hover:bg-blue-700"
  >
    Explore Category
  </a>
</div>
