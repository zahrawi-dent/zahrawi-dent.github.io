---
// src/components/ArticleCard.astro
interface Props {
  title: string;
  excerpt: string;
  date: string;
  link: string;
  image?: string;
  readTime?: number;
}

const { 
  title, 
  excerpt, 
  date, 
  link, 
  image, 
  readTime 
} = Astro.props;
---

<article class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300 mb-6">
  <div class="p-6">
    {image && (
      <div class="mb-4">
        <img 
          src={image} 
          alt={title} 
          class="w-full h-48 object-cover rounded-md"
        />
      </div>
    )}
    
    <div class="space-y-3">
      <h2 class="text-xl font-semibold text-gray-800 hover:text-blue-600">
        <a href={link}>{title}</a>
      </h2>
      
      <p class="text-gray-600 line-clamp-3">{excerpt}</p>
      
      <div class="flex justify-between items-center text-sm text-gray-500">
        <span>{new Date(date).toLocaleDateString()}</span>
        {readTime && (
          <span>{readTime} min read</span>
        )}
      </div>
    </div>
  </div>
</article>


